{
  "name": "mlc-bootstrap",
  "version": "0.0.1",
  "dependencies": {
    "commander": "^2.9.0",
    "elm": "^0.18.0",
    "handlebars": "^4.0.6",
    "ramda": "^0.23.0",
    "yamljs": "^0.2.9"
  },
  "scripts": {
    "build": "elm-make src/Bootstrap.elm --output=/tmp/mlc.js",
    "build-sed": "elm-make src/MLC/Test.elm --output=/tmp/mlc.js",
    "format": "elm-format --yes src/",

    "watch-scopes": "chokidar 'src/**/*.elm' -c 'elm make src/SEd/Scopes/ScopeTest.elm --output /tmp/elm.compiled.js' --initial"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0"
  }
}
